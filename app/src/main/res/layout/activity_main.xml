<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.seetharaman.trial.MainActivity"

    android:background="@drawable/back6"
    >
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >


    </ScrollView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="vertical"
        android:id="@+id/relativeLayout"
        android:layout_alignTop="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <ScrollView
            android:layout_width="250dp"
            android:layout_height="330dp"
            android:id="@+id/SV_Entries"
            android:fillViewport="true"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">



        <android.support.design.widget.TextInputLayout android:id="@+id/view"
            android:layout_column="1"
            android:layout_width="245dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/et_firstname"
                android:hint="First Name"

                android:width="300dp" />
        </android.support.design.widget.TextInputLayout>

        <Spinner android:id="@+id/sp_event"
            android:layout_column="1"
            android:spinnerMode="dropdown"
            android:layout_height="50dp"
            android:layout_width="195dp"
            android:layout_below="@+id/view5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent" />

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/ib_add_clear_event"
            android:layout_column="2"
            android:src="@android:color/transparent"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:layout_alignBottom="@+id/sp_event"
            android:layout_toRightOf="@+id/sp_event"
            android:layout_toEndOf="@+id/sp_event" />




        <android.support.design.widget.TextInputLayout android:id="@+id/view2"
            android:layout_column="1"
            android:layout_width="245dp"
            android:layout_height="50dp"
            android:layout_below="@+id/view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/et_secondname"
                android:layout_column="2"
                android:hint="Last Name"
                android:width="300dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout android:id="@+id/view3"
            android:layout_column="1"
            android:layout_width="245dp"
            android:layout_height="50dp"
            android:layout_below="@+id/view2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/et_phno"
                android:layout_column="2"
                android:hint="Phone Number"
                android:maxLength="10"
                android:digits="0123456789"
                android:width="300dp" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout android:id="@+id/view4"
            android:layout_column="1"
            android:layout_width="245dp"
            android:layout_height="50dp"
            android:layout_below="@+id/view3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/et_email"
                android:layout_column="2"
                android:hint="Email id."
                android:focusable="true"
                android:width="300dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout android:id="@+id/view5"
            android:layout_column="1"
            android:layout_width="245dp"
            android:layout_height="50dp"
            android:layout_below="@+id/view4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent">



            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/et_school"
                android:layout_column="2"
                android:hint="School/ College"
                android:width="300dp"
                android:maxLength="30" />

        </android.support.design.widget.TextInputLayout>

            </RelativeLayout>
        </ScrollView>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/imageView"
            android:src="@drawable/icon"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/lv_eventsAdded"
            android:layout_alignStart="@+id/lv_eventsAdded" />

        <ListView
            android:layout_width="205dp"
            android:layout_height="100dp"
            android:id="@+id/lv_eventsAdded"
            android:layout_below="@+id/SV_Entries"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent" />

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:id="@+id/ib_verify"
            android:scaleType="fitXY"
            android:visibility="visible"
            android:src="@drawable/register"
            android:layout_below="@+id/lv_eventsAdded"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="EVENTS\nADDED ->"
            android:id="@+id/textView"
            android:layout_below="@+id/SV_Entries"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

</RelativeLayout>
