<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.seetharaman.trial.MainActivityRegistration"
    android:background="#18FFFF"
    android:fillViewport="true">
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ScrollView
        android:layout_width="250dp"
        android:layout_height="400dp"
        android:id="@+id/scrollView"
        android:background="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/imageView"
                android:src="@drawable/icon"
                android:background="#f8fc0b"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </ScrollView>

    <android.support.design.widget.TextInputLayout
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/view_name"
        android:layout_alignTop="@+id/scrollView"
        android:layout_alignLeft="@+id/scrollView"
        android:layout_alignStart="@+id/scrollView"
        android:layout_marginTop="58dp" >

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_firstname"
        android:layout_alignBottom="@+id/view_name"
        android:layout_alignLeft="@+id/scrollView"
        android:layout_alignStart="@+id/scrollView"
        android:maxLength="20"
        android:hint="First Name"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"/>
</android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/view_secondname"
        android:layout_below="@+id/view_name"
        android:layout_alignLeft="@+id/scrollView"
        android:layout_alignStart="@+id/scrollView" >

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_secondname"
        android:layout_alignTop="@+id/view_secondname"
        android:layout_alignLeft="@+id/scrollView"
        android:layout_alignStart="@+id/scrollView"
        android:hint="Second Name"
        android:maxLength="20"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"/>
</android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/view3"
        android:layout_below="@+id/view_secondname"
        android:layout_alignLeft="@+id/scrollView"
        android:layout_alignStart="@+id/scrollView" >

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/et_phno"
        android:layout_below="@+id/view_secondname"
        android:layout_alignLeft="@+id/scrollView"
        android:layout_alignStart="@+id/scrollView"
        android:hint="Ph. Number"
        android:maxLength="10"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/view4"
        android:layout_below="@+id/view3"
        android:layout_alignLeft="@+id/scrollView"
        android:layout_alignStart="@+id/scrollView" >

    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/et_email"
        android:layout_alignBottom="@+id/view4"
        android:layout_alignLeft="@+id/scrollView"
        android:layout_alignStart="@+id/scrollView"
        android:hint="E-mail id."
        android:singleLine="false"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:id="@+id/view5"
        android:layout_below="@+id/view4"
        android:layout_alignLeft="@+id/scrollView"
        android:layout_alignStart="@+id/scrollView" >

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/et_school"
        android:layout_alignTop="@+id/view5"
        android:layout_alignLeft="@+id/scrollView"
        android:layout_alignStart="@+id/scrollView"
        android:hint="School/College"
        android:maxLines="2"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"/>
    </android.support.design.widget.TextInputLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb_fname"
        android:layout_alignBottom="@+id/view_name"
        android:layout_alignRight="@+id/scrollView"
        android:layout_alignEnd="@+id/scrollView"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb_sname"
        android:layout_alignBottom="@+id/view_secondname"
        android:layout_alignRight="@+id/scrollView"
        android:layout_alignEnd="@+id/scrollView"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb_phno"
        android:layout_above="@+id/view4"
        android:layout_alignRight="@+id/scrollView"
        android:layout_alignEnd="@+id/scrollView"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb_email"
        android:layout_above="@+id/view5"
        android:layout_alignRight="@+id/scrollView"
        android:layout_alignEnd="@+id/scrollView"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb_school"
        android:layout_alignBottom="@+id/view5"
        android:layout_alignRight="@+id/scrollView"
        android:layout_alignEnd="@+id/scrollView"
        android:checked="false" />

    <Spinner
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/sp_event"
        android:layout_below="@+id/view5"
        android:layout_alignLeft="@+id/scrollView"
        android:layout_alignStart="@+id/scrollView" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONFIRM DETAILS"
        android:id="@+id/rb_confirm"
        android:checked="false"
        android:background="@android:color/transparent"
        android:layout_alignBottom="@+id/bt_register"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:id="@+id/bt_register"
        android:layout_below="@+id/sp_event"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>

</ScrollView>
